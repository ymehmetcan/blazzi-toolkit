{
  "name": "@blazzi/eslint-config",
  "version": "0.2.0",
  "description": "Blazzi ESLint config",
  "keywords": [
    "config",
    "eslint",
    "lint"
  ],
  "author": "Mehmetcan YILMAZ",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/ymehmetcan/blazzi-toolkit/tree/main/packages/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/ymehmetcan/blazzi-toolkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ymehmetcan/blazzi-toolkit.git",
    "directory": "packages/eslint-config"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./base": {
      "types": "./dist/exports/base.d.ts",
      "import": "./dist/exports/base.js"
    },
    "./expo": {
      "types": "./dist/exports/expo.d.ts",
      "import": "./dist/exports/expo.js"
    },
    "./next": {
      "types": "./dist/exports/next.d.ts",
      "import": "./dist/exports/next.js"
    },
    "./react": {
      "types": "./dist/exports/react.d.ts",
      "import": "./dist/exports/react.js"
    },
    "./react-native": {
      "types": "./dist/exports/react-native.d.ts",
      "import": "./dist/exports/react-native.js"
    },
    "./typescript": {
      "types": "./dist/exports/typescript.d.ts",
      "import": "./dist/exports/typescript.js"
    },
    "./vue": {
      "types": "./dist/exports/vue.d.ts",
      "import": "./dist/exports/vue.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint:types": "tsc --noEmit"
  },
  "dependencies": {
    "@eslint/js": "9.14.0",
    "@next/eslint-plugin-next": "15.0.3",
    "@typescript-eslint/utils": "8.13.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.0.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-vue": "9.30.0",
    "globals": "15.12.0",
    "typescript-eslint": "8.13.0"
  },
  "devDependencies": {
    "@blazzi/ts-config": "workspace:*",
    "@types/eslint__js": "8.42.3",
    "tsup": "8.3.5",
    "typescript": "5.6.3"
  },
  "peerDependencies": {
    "eslint": ">= 9.7"
  }
}
